@model Asp.NetProject.Models.Owner

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional CSS for responsiveness and hover effects */
        .card {
            margin-bottom: 20px;
        }

        .container {
            margin-top: 100px;
        }
        /* Hover effects for form inputs */
        .form-control:hover {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-primary:hover {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
    <title>Login</title>
</head>
<body>

    @if (ViewBag.SMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SMessage</div>
    }
    @if (ViewBag.EMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.EMessage</div>
    }
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        @*<h2 class="card-title text-center">Owner</h2>*@
                        <form asp-controller="Owner" asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <input asp-for="Email" placeholder="Enter email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" placeholder="Enter password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col">
                                    <input type="submit" value="login" class="btn btn-primary" />
                                    <input id="signupButton" type="button" value="SignUp" class="btn btn-primary" />

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#signupButton').click(function () {
                window.location.href = '/Owner/SignUp'; // Change the URL to your desired SignUp view
            });
        });
    </script>

</body>
</html>
